{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",         // Node.js uses CommonJS modules
    "moduleResolution": "node",   // Resolve modules the same way Node.js does
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
