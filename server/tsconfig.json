{
  "compilerOptions": {
    "target": "ES2020", // or "ESNext" based on your needs
    "module": "ESNext", // or "ES2020" or "ES2022"
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

